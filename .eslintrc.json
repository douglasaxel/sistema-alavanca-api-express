{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": "standard-with-typescript",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"prettier",
		"simple-import-sort",
		"import"
	],
	"rules": {
		"prettier/prettier": "error",
		"simple-import-sort/imports": "error",
		"simple-import-sort/exports": "error",
		"import/first": "error",
		"import/newline-after-import": "error",
		"import/no-duplicates": "error"
	}
}